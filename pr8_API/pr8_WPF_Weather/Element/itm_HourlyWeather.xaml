<UserControl x:Class="pr8_WPF_Weather.Element.itm_HourlyWeather"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr8_WPF_Weather.Element"
             mc:Ignorable="d">
    <Grid Margin="10">
        <StackPanel>
            <Label Name="lb_time" Content="17" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
            <Image x:Name="img_pogoda" Height="40" Width="40" HorizontalAlignment="Center"/>
            <Label Name="lb_temp" Content="-12°" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
            <Label Name="lb_humidity" Content="22%" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>
